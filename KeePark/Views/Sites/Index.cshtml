@model IEnumerable<KeepPark.Models.Site>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SiteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SiteDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SitePhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SitePhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SiteID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SiteID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SiteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
