@model IEnumerable<KeePark.Data.GeneralUser>

@{
    Layout = "_Layout";
    ViewData["Title"] = "UserProfile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/userstyle.css" type="text/css" media="screen" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
    <div class="jumbotron text-center">
        <div class="section-title">
            <h1>ACCOUNT</h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                @foreach (var item in Model)
                {
                    if (item.UserName == User.Identity.Name)
                    {
                        <h5 class="name">
                            @Html.DisplayFor(modelItem => item.FirstName)
                            @Html.DisplayFor(modelItem => item.LastName)
                        </h5>


                        <p class="email">@User.Identity.Name</p>

                        <p class="phone"> @Html.DisplayFor(modelItem => item.PhoneNumber)</p>
                    }
                }

                <a id="my_reservations" href="/ReserveSpots/Index">Reservation History</a>
                <br />
                <a id="future_orders" href="/ReserveSpots/FutureOrders">My Future Orders</a>
                <br />
                <a id="rent_site" href="/ParkingSpots/Create">Rent Your Site</a>
                <br />
                <a id="edit_details" href="/Identity/Account/Manage">Edit Details</a>


            




            </div>
            <div class="col-sm-8">
                <h5>Order History</h5>

                <canvas id="myCanvas" width="1100" height="70"></canvas>

                <script>
                    var c = document.getElementById("myCanvas");
                    var ctx = c.getContext("2d");

                    // Create gradient
                    var grd = ctx.createLinearGradient(0, 0, 900, 0);
                    grd.addColorStop(0, "#000000");
                    grd.addColorStop(1, "white");

                    // Fill with gradient
                    ctx.fillStyle = grd;
                    ctx.fillRect(10, 10, 950, 80);
                </script><br />



            </div>
            </div>
        </div>


  

    </br>
    </br>
    </br>
    </br>
    </br>
    </br>
    </br>

    <footer>
        <section class="footer-email-signup max-1350">
            <div class="jumbotron text-center" style="background-color:#ffffff">
                <div class="warpper">
                    <h4>DON'T MISS OUT!</h4>
                </div>
            </div>
        </section>
    </footer>

</body>
</html>
