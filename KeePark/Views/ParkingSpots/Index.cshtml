@model IEnumerable<KeePark.Models.ParkingSpot>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card-deck">
    @foreach (var spot in Model)
    {
        var photoPath = "~/SpotImages/" + (spot.filePath ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@spot.ParkingSpotID</h3>
                <h3>@spot.SpotName</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" height="400" width="500"/>

            <div class="card-footer text-center">
                <a asp-controller="ParkingSpotsController" asp-action="Details" asp-route-id="@spot.ParkingSpotID"
                   class="btn btn-primary m-1">View</a>
                <a asp-controller="ParkingSpots" asp-action="Edit" asp-route-id="@spot.ParkingSpotID" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>