@model KeePark.Models.ParkingSpot
@using KeePark.ViewModels
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Edit</h2>

<h4>ParkingSpot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <a>Spot ID: @Model.ParkingSpotID</a>
        <form enctype="multipart/form-data" method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParkingSpotID" />
            <div class="form-group">
                <label asp-for="SpotName" class="control-label"></label>
                <input asp-for="SpotName" class="form-control" />
                <span asp-validation-for="SpotName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpotDescription" class="control-label"></label>
                <input asp-for="SpotDescription" class="form-control" />
                <span asp-validation-for="SpotDescription" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input class="form-control custom-file-input" type="file" name="file">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

            @*This script is required to display the selected file in the file upload element*@

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

